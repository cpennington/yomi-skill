---
import favicon_svg from "../assets/favicon.svg";
import favicon_png from "../assets/favicon.png";

const tabs = [
  { label: "Yomi 1", link: "yomi1" },
  { label: "Yomi 2", link: "yomi2" },
];
const { selected } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="icon" type="image/svg+xml" href={favicon_svg.src} />
    <link rel="icon" type="image/png" href={favicon_png.src} />

    <title>Yomi Matchup Chart</title>
  </head>

  <body>
    <div class="p-4">
      <div class="sm:block">
        <div class="border-b border-gray-200">
          <nav class="-mb-px flex gap-6" aria-label="Tabs">
            {
              tabs.map((item) =>
                item.link == selected ? (
                  <a
                    href=`${import.meta.env.BASE_URL}${item.link}`
                    class="shrink-0 border-b-2 border-sky-500 px-1 pb-4 text-sm font-medium text-sky-600"
                    aria-current="page"
                  >
                    {item.label}
                  </a>
                ) : (
                  <a
                    href=`${import.meta.env.BASE_URL}${item.link}`
                    class="shrink-0 border-b-2 border-transparent px-1 pb-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
                  >
                    {item.label}
                  </a>
                ),
              )
            }
          </nav>
        </div>
      </div>
    </div>

    <slot />
  </body>
</html>
